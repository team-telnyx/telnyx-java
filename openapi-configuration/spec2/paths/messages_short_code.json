{
  "post": {
    "summary": "Send a short code message",
    "operationId": "CreateShortCodeMessage",
    "tags": [
      "Messages"
    ],
    "requestBody": {
      "description": "Message payload",
      "content": {
        "application/json": {
          "schema": {
            "$ref": "../components/schemas/CreateShortCodeMessageRequest.json"
          }
        }
      }
    },
    "responses": {
      "200": {
        "$ref": "../components/responses/MessageResponse.json"
      },
      "default": {
        "$ref": "../components/responses/GenericErrorResponse.json"
      }
    },
    "callbacks": {
      "deliveryUpdate": {
        "{$request.body#/webhook_url}": {
          "post": {
            "summary": "Delivery Short Code Update Request",
            "requestBody": {
              "required": true,
              "content": {
                "application/json": {
                  "schema": {
                    "$ref": "../components/schemas/OutboundMessageEvent.json"
                  }
                }
              }
            },
            "responses": {
              "200": {
                "description": "The server must return an HTTP 200, otherwise we will reattempt delivery at the failover webhook URL."
              }
            }
          }
        }
      }
    },
    "x-latency-category": "responsive"
  }
}