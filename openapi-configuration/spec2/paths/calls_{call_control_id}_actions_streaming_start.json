{
  "post": {
    "summary": "Streaming start",
    "description": "Start streaming the media from a call to a specific WebSocket address or Dialogflow connection in near-realtime. Audio will be delivered as base64-encoded RTP payload (raw audio), wrapped in JSON payloads.\n\nPlease find more details about media streaming messages specification under the [link](https://developers.telnyx.com/docs/voice/programmable-voice/media-streaming).",
    "operationId": "StartCallStreaming",
    "tags": [
      "Call Commands"
    ],
    "parameters": [
      {
        "$ref": "../components/parameters/CallControlId.json"
      }
    ],
    "requestBody": {
      "description": "Start streaming media request",
      "required": true,
      "content": {
        "application/json": {
          "schema": {
            "$ref": "../components/schemas/StartStreamingRequest.json"
          }
        }
      }
    },
    "responses": {
      "200": {
        "$ref": "../components/responses/CallControlCommandResponse.json"
      },
      "default": {
        "$ref": "../components/responses/GenericErrorResponse.json"
      }
    },
    "callbacks": {
      "callStreamingStarted": {
        "{$request.body#/webhook_url}": {
          "post": {
            "summary": "Calls streaming start call streaming started",
            "requestBody": {
              "required": true,
              "content": {
                "application/json": {
                  "schema": {
                    "$ref": "../components/schemas/CallStreamingStartedEvent.json"
                  }
                }
              }
            },
            "responses": {
              "200": {
                "description": "The server must return an HTTP 200, otherwise we will reattempt delivery at the failover webhook URL."
              }
            }
          }
        }
      },
      "callStreamingStopped": {
        "{$request.body#/webhook_url}": {
          "post": {
            "summary": "Calls streaming start call streaming stopped",
            "requestBody": {
              "required": true,
              "content": {
                "application/json": {
                  "schema": {
                    "$ref": "../components/schemas/CallStreamingStoppedEvent.json"
                  }
                }
              }
            },
            "responses": {
              "200": {
                "description": "The server must return an HTTP 200, otherwise we will reattempt delivery at the failover webhook URL."
              }
            }
          }
        }
      },
      "callStreamingFailed": {
        "{$request.body#/webhook_url}": {
          "post": {
            "summary": "Calls streaming start call streaming failed",
            "requestBody": {
              "required": true,
              "content": {
                "application/json": {
                  "schema": {
                    "$ref": "../components/schemas/CallStreamingFailedEvent.json"
                  }
                }
              }
            },
            "responses": {
              "200": {
                "description": "The server must return an HTTP 200, otherwise we will reattempt delivery at the failover webhook URL."
              }
            }
          }
        }
      }
    },
    "x-latency-category": "interactive"
  }
}