{
  "post": {
    "summary": "Streaming stop",
    "description": "Stop streaming a call to a WebSocket.\n\n**Expected Webhooks (see [callback schema](https://developers.telnyx.com/api/call-control/stop-call-streaming#callbacks) below):**\n\n- `streaming.stopped`\n",
    "operationId": "StopCallStreaming",
    "tags": [
      "Call Commands"
    ],
    "parameters": [
      {
        "$ref": "../components/parameters/CallControlId.json"
      }
    ],
    "requestBody": {
      "description": "Stop streaming media request",
      "required": true,
      "content": {
        "application/json": {
          "schema": {
            "$ref": "../components/schemas/StopStreamingRequest.json"
          }
        }
      }
    },
    "responses": {
      "200": {
        "$ref": "../components/responses/CallControlCommandResponse.json"
      },
      "default": {
        "$ref": "../components/responses/GenericErrorResponse.json"
      }
    },
    "callbacks": {
      "callStreamingStopped": {
        "{$request.body#/webhook_url}": {
          "post": {
            "summary": "Calls streaming stop call streaming stopped",
            "requestBody": {
              "required": true,
              "content": {
                "application/json": {
                  "schema": {
                    "$ref": "../components/schemas/CallStreamingStoppedEvent.json"
                  }
                }
              }
            },
            "responses": {
              "200": {
                "description": "The server must return an HTTP 200, otherwise we will reattempt delivery at the failover webhook URL."
              }
            }
          }
        }
      }
    },
    "x-latency-category": "interactive"
  }
}