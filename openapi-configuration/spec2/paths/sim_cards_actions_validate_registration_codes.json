{
  "post": {
    "summary": "Validate SIM cards registration codes",
    "tags": [
      "SIM Cards"
    ],
    "description": "It validates whether SIM card registration codes are valid or not.",
    "operationId": "ValidateRegistrationCodes",
    "requestBody": {
      "required": true,
      "content": {
        "application/json": {
          "schema": {
            "type": "object",
            "properties": {
              "registration_codes": {
                "type": "array",
                "items": {
                  "type": "string"
                }
              }
            },
            "description": "The object containing the Array of SIM card registration codes.",
            "example": {
              "registration_codes": [
                "123456780",
                "1231231230"
              ]
            }
          }
        }
      }
    },
    "responses": {
      "200": {
        "description": "Successful",
        "content": {
          "application/json": {
            "schema": {
              "$ref": "../components/schemas/SIMCardRegistrationCodeValidations.json"
            }
          }
        }
      },
      "401": {
        "description": "Unauthorized"
      },
      "default": {
        "$ref": "../components/responses/GenericErrorResponse.json"
      }
    },
    "x-latency-category": "responsive"
  }
}