          "permissions": {
            "description": "The permissions the token will have",
            "type": "string",
            "enum": [
              "porting_order.document.read",
              "porting_order.document.update"
            ]
          }
        },
        "example": {
          "expires_in_seconds": 3600,
          "permissions": [
            "porting_order.document.read",
            "porting_order.document.update"
          ]
        }
      }
    }
  }
}