{
  "description": "A list of phone numbers to send the verification codes to and the method to send them by",
  "required": false,
  "content": {
    "application/json": {
      "schema": {
        "type": "object",
        "properties": {
          "phone_numbers": {
            "type": "array",
            "maxItems": 100,
            "items": {
              "type": "string"
            }
          },
          "verification_method": {
            "type": "string",
            "enum": [
              "sms",
              "call"
            ]
          }
        },
        "example": {
          "phone_numbers": [
            "+61424000001",
            "+61424000002"
          ],
          "verification_method": "sms"
        }
      }
    }
  }
}