{
  "required": true,
  "content": {
    "application/json": {
      "schema": {
        "type": "object",
        "required": [
          "phone_number"
        ],
        "properties": {
          "phone_number": {
            "type": "string",
            "description": "A valid US phone number in E164 format.",
            "example": "+1234567890",
            "pattern": "^\\+1\\d{10}$"
          },
          "webhook_url": {
            "type": "string",
            "description": "Callback URL to receive webhook notifications.",
            "example": "https://example.com/webhook"
          },
          "additional_data": {
            "$ref": "../schemas/CustomerServiceRecordAdditionalData.json"
          }
        }
      }
    }
  }
}