  "patch": {
    "summary": "Update requirement values in requirement group",
    "operationId": "UpdateRequirementGroup",
    "tags": [
      "Requirement Groups"
    ],
    "parameters": [
      {
        "in": "path",
        "name": "id",
        "schema": {
          "type": "string"
        },
        "required": true,
        "description": "ID of the requirement group"
      }
    ],
    "requestBody": {
      "required": true,
      "content": {
