{
  "delete": {
    "summary": "Delete a queue",
    "description": "Delete an existing queue. The queue must be empty (no calls in it) to be deleted.",
    "operationId": "DeleteQueue",
    "tags": [
      "Queue Commands"
    ],
    "parameters": [
      {
        "name": "queue_name",
        "description": "Uniquely identifies the queue by name",
        "in": "path",
        "required": true,
        "schema": {
          "type": "string"
        }
      }
    ],
    "responses": {
      "204": {
        "description": "Queue successfully deleted"
      },
      "404": {
        "$ref": "../components/responses/NotFoundResponse.json"
      },
      "default": {
        "$ref": "../components/responses/GenericErrorResponse.json"
      }
    },
    "x-latency-category": "interactive"
  },
  "get": {
    "summary": "Retrieve a call queue",
    "description": "Retrieve an existing call queue",
    "operationId": "RetrieveCallQueue",
    "tags": [
      "Queue Commands"
    ],
    "parameters": [
      {
        "name": "queue_name",
        "description": "Uniquely identifies the queue by name",
        "in": "path",
        "required": true,
        "schema": {
          "type": "string"
        }
      }
    ],
    "responses": {
      "200": {
        "$ref": "../components/responses/QueueResponse.json"
      },
      "404": {
        "$ref": "../components/responses/NotFoundResponse.json"
      }
    },
    "x-latency-category": "interactive"
  },
  "post": {
    "summary": "Update queue max size",
    "description": "Update the maximum size of an existing queue",
    "operationId": "UpdateQueueMaxSize",
    "tags": [
      "Queue Commands"
    ],
    "parameters": [
      {
        "name": "queue_name",
        "description": "Uniquely identifies the queue by name",
        "in": "path",
        "required": true,
        "schema": {
          "type": "string"
        }
      }
    ],
    "requestBody": {
      "description": "Queue max size update request",
      "required": true,
      "content": {
        "application/json": {
          "schema": {
            "type": "object",
            "required": [
              "max_size"
            ],
            "properties": {
              "max_size": {
                "$ref": "../components/schemas/QueueMaxSize.json"
              }
            }
          }
        }
      }
    },
    "responses": {
      "200": {
        "$ref": "../components/responses/QueueResponse.json"
      },
      "404": {
        "$ref": "../components/responses/NotFoundResponse.json"
      },
      "default": {
        "$ref": "../components/responses/GenericErrorResponse.json"
      }
    },
    "x-latency-category": "interactive"
  }
}